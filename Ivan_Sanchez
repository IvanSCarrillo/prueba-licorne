<body>
    <div class="table">
        <table>
          <tr>
            <td>ID</td>
            <td>Nombre</td>
            <td>Precio</td>
            <td>Imagen</td>
        </tr>
        <tbody id="data">
        </tbody>
      </table>
    </div>

      <script>
        let url = "https://licorne.mx/prueba/api.php"
        fetch(url)
        .then (response => response.json())
        .then (data => mostrarData(data))
        .catch(err => console.log(err))

    const mostrarData = (data) => {
        console.log(data)
        let body = ''
        for (let i=0; i<data.length; i++){
            body += `<tr><td>${data[i].id}</td><td>${data[i].nombre}</td><td>${data[i].precio}</td><td><img src="${data[i].imagen}"></td></tr>`
        }

        document.getElementById('data').innerHTML = body
    }
</script>

